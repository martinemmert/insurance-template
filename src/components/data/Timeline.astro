---
interface TimelineEntry {
  date: string;
  title: string;
  text: string;
}

interface Props {
  entries: TimelineEntry[];
  variant?: 'inline' | 'alternating';
  class?: string;
}

const { entries, variant = 'inline', class: className } = Astro.props;
---

{variant === 'inline' ? (
  <div class:list={['content-timeline', className]}>
    {entries.map(entry => (
      <div class="timeline-entry">
        <div class="timeline-entry__date">{entry.date}</div>
        <h4 class="timeline-entry__title">{entry.title}</h4>
        <p class="timeline-entry__text">{entry.text}</p>
      </div>
    ))}
  </div>
) : (
  <div class:list={['timeline', className]}>
    {entries.map(entry => (
      <div class="timeline-item">
        <div class="timeline-item__year">{entry.date}</div>
        <h4 class="timeline-item__title">{entry.title}</h4>
        <p class="timeline-item__text">{entry.text}</p>
      </div>
    ))}
  </div>
)}

<style>
  /* Inline variant */
  .content-timeline {
    margin: 2rem 0;
    position: relative;
    padding-left: 2rem;
  }

  .content-timeline::before {
    content: '';
    position: absolute;
    left: 0.375rem;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #e5e5e5;
  }

  .timeline-entry {
    position: relative;
    padding-bottom: 2rem;
  }

  .timeline-entry:last-child {
    padding-bottom: 0;
  }

  .timeline-entry::before {
    content: '';
    position: absolute;
    left: -1.625rem;
    top: 0.375rem;
    width: 0.75rem;
    height: 0.75rem;
    background: #1a4d2e;
    border-radius: 50%;
    border: 2px solid white;
    box-shadow: 0 0 0 2px #1a4d2e;
  }

  .timeline-entry__date {
    font-size: 0.8125rem;
    font-weight: 600;
    color: #1a4d2e;
    margin-bottom: 0.375rem;
  }

  .timeline-entry__title {
    font-weight: 700;
    margin-bottom: 0.375rem;
  }

  .timeline-entry__text {
    font-size: 0.9375rem;
    color: #555;
    line-height: 1.6;
  }

  /* Alternating variant */
  .timeline {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    width: 2px;
    height: 100%;
    background: #e0e0e0;
  }

  .timeline-item {
    position: relative;
    width: 50%;
    padding: 0 3rem 3rem;
  }

  .timeline-item:nth-child(odd) {
    margin-left: 50%;
    text-align: left;
  }

  .timeline-item:nth-child(even) {
    text-align: right;
  }

  .timeline-item::before {
    content: '';
    position: absolute;
    top: 0.5rem;
    width: 1rem;
    height: 1rem;
    background: #1a4d2e;
    border-radius: 50%;
    border: 3px solid white;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .timeline-item:nth-child(odd)::before {
    left: -0.5rem;
  }

  .timeline-item:nth-child(even)::before {
    right: -0.5rem;
  }

  .timeline-item__year {
    font-size: 0.875rem;
    font-weight: 700;
    color: #1a4d2e;
    margin-bottom: 0.5rem;
  }

  .timeline-item__title {
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .timeline-item__text {
    font-size: 0.9375rem;
    color: #555;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .timeline::before {
      left: 0;
    }

    .timeline-item {
      width: 100%;
      margin-left: 0 !important;
      text-align: left !important;
      padding-left: 2rem;
      padding-right: 0;
    }

    .timeline-item::before {
      left: -0.5rem !important;
      right: auto !important;
    }
  }
</style>
