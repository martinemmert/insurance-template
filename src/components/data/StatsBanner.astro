---
interface Stat {
  value: string;
  label: string;
}

interface Props {
  stats: Stat[];
  class?: string;
}

const { stats, class: className } = Astro.props;
---

<div class:list={['stats-banner', className]}>
  {stats.map(stat => (
    <div class="stats-banner__item">
      <div class="stats-banner__number">{stat.value}</div>
      <div class="stats-banner__label">{stat.label}</div>
    </div>
  ))}
</div>

<style>
  .stats-banner {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 2rem;
    text-align: center;
  }

  .stats-banner__item {
    padding: 2rem 1rem;
  }

  .stats-banner__number {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 3rem;
    font-weight: 700;
    color: #1a4d2e;
    margin-bottom: 0.5rem;
  }

  .stats-banner__label {
    font-size: 1rem;
    color: #666;
  }

  @media (max-width: 1024px) {
    .stats-banner {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .stats-banner {
      grid-template-columns: 1fr;
    }
  }
</style>
