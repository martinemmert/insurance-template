---
interface Props {
  src: string;
  title?: string;
  caption?: string;
  aspectRatio?: '16:9' | '4:3' | '1:1';
  class?: string;
}

const {
  src,
  title = '',
  caption,
  aspectRatio = '16:9',
  class: className
} = Astro.props;

const aspectRatios = {
  '16:9': '56.25%',
  '4:3': '75%',
  '1:1': '100%'
};
---

<figure class:list={['media-embed', className]}>
  <div class="media-embed__wrapper" style={`padding-bottom: ${aspectRatios[aspectRatio]}`}>
    <iframe src={src} title={title} frameborder="0" allowfullscreen></iframe>
  </div>
  {caption && <figcaption>{caption}</figcaption>}
</figure>

<style>
  .media-embed {
    margin: 2.5rem 1.5rem;
  }

  .media-embed__wrapper {
    position: relative;
    height: 0;
    overflow: hidden;
    border-radius: 0.75rem;
  }

  .media-embed__wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .media-embed figcaption {
    font-size: 0.875rem;
    color: #666;
    margin-top: 0.75rem;
    text-align: center;
  }
</style>
