---
interface GalleryImage {
  src: string;
  alt: string;
  caption?: string;
}

interface Props {
  images: GalleryImage[];
  columns?: 2 | 3 | 4;
  class?: string;
}

const { images, columns = 3, class: className } = Astro.props;
---

<div class:list={['gallery-grid', `gallery-grid--cols-${columns}`, className]}>
  {images.map(image => (
    <figure class="gallery-grid__item">
      <img src={image.src} alt={image.alt} />
      {image.caption && <figcaption>{image.caption}</figcaption>}
    </figure>
  ))}
</div>

<style>
  .gallery-grid {
    display: grid;
    gap: 1.5rem;
    margin: 2.5rem 0;
  }

  .gallery-grid--cols-2 {
    grid-template-columns: repeat(2, 1fr);
  }

  .gallery-grid--cols-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  .gallery-grid--cols-4 {
    grid-template-columns: repeat(4, 1fr);
  }

  .gallery-grid__item img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 0.75rem;
    transition: transform 0.3s;
  }

  .gallery-grid__item:hover img {
    transform: scale(1.02);
  }

  .gallery-grid__item figcaption {
    font-size: 0.875rem;
    color: #666;
    margin-top: 0.5rem;
    text-align: center;
  }

  @media (max-width: 1024px) {
    .gallery-grid--cols-3,
    .gallery-grid--cols-4 {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 640px) {
    .gallery-grid--cols-2,
    .gallery-grid--cols-3,
    .gallery-grid--cols-4 {
      grid-template-columns: 1fr;
    }
  }
</style>
