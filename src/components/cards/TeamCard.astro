---
interface Props {
  name: string;
  role: string;
  image: string;
  bio?: string;
  socialLinks?: { platform: string; url: string }[];
  class?: string;
}

const {
  name,
  role,
  image,
  bio,
  socialLinks = [],
  class: className
} = Astro.props;
---

<article class:list={['team-card', className]}>
  <img src={image} alt={name} class="team-card__image" />
  <div class="team-card__content">
    <h3 class="team-card__name">{name}</h3>
    <p class="team-card__role">{role}</p>
    {bio && <p class="team-card__bio">{bio}</p>}
    {socialLinks.length > 0 && (
      <div class="team-card__social">
        {socialLinks.map(link => (
          <a href={link.url} class="team-card__social-link" aria-label={link.platform}>
            <slot name={link.platform} />
          </a>
        ))}
      </div>
    )}
  </div>
</article>

<style>
  .team-card {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    text-align: center;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .team-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
  }

  .team-card__image {
    width: 100%;
    height: 280px;
    object-fit: cover;
  }

  .team-card__content {
    padding: 1.5rem;
  }

  .team-card__name {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .team-card__role {
    font-size: 0.9375rem;
    color: #1a4d2e;
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .team-card__bio {
    font-size: 0.875rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .team-card__social {
    display: flex;
    justify-content: center;
    gap: 0.75rem;
  }

  .team-card__social-link {
    color: #666;
    transition: color 0.2s;
  }

  .team-card__social-link:hover {
    color: #1a4d2e;
  }
</style>
