---
interface Step {
  title: string;
  text: string;
}

interface Props {
  steps: Step[];
  class?: string;
}

const { steps, class: className } = Astro.props;
---

<ol class:list={['steps-list', className]}>
  {steps.map(step => (
    <li>
      <div class="step-content">
        <h3 class="step-content__title">{step.title}</h3>
        <p class="step-content__text">{step.text}</p>
      </div>
    </li>
  ))}
</ol>

<style>
  .steps-list {
    margin: 2rem 0;
    list-style: none;
    counter-reset: steps;
  }

  .steps-list li {
    counter-increment: steps;
    display: flex;
    gap: 1.25rem;
    padding: 1.5rem 0;
    border-bottom: 1px solid #e5e5e5;
  }

  .steps-list li:last-child {
    border-bottom: none;
  }

  .steps-list li::before {
    content: counter(steps);
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    background: #1a4d2e;
    color: white;
    font-weight: 700;
    border-radius: 50%;
  }

  .step-content__title {
    font-weight: 700;
    margin-bottom: 0.25rem;
  }

  .step-content__text {
    font-size: 0.9375rem;
    color: #555;
    line-height: 1.6;
  }
</style>
