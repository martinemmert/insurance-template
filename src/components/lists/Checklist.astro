---
interface Props {
  items: string[];
  class?: string;
}

const { items, class: className } = Astro.props;
---

<ul class:list={['checklist', className]}>
  {items.map(item => (
    <li>
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polyline points="20 6 9 17 4 12"></polyline>
      </svg>
      <span>{item}</span>
    </li>
  ))}
</ul>

<style>
  .checklist {
    margin: 2rem 0;
    list-style: none;
  }

  .checklist li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 0.75rem 0;
  }

  .checklist li svg {
    flex-shrink: 0;
    color: #1a4d2e;
    margin-top: 0.125rem;
  }
</style>
