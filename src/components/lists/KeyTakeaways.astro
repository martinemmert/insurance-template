---
interface Props {
  title?: string;
  items: string[];
  class?: string;
}

const {
  title = 'Das Wichtigste in KÃ¼rze',
  items,
  class: className
} = Astro.props;
---

<div class:list={['key-takeaways', className]}>
  <h3 class="key-takeaways__title">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
    </svg>
    {title}
  </h3>
  <ul class="key-takeaways__list">
    {items.map(item => (
      <li>
        <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="20 6 9 17 4 12"></polyline>
        </svg>
        {item}
      </li>
    ))}
  </ul>
</div>

<style>
  .key-takeaways {
    margin: 2.5rem 1.5rem;
    padding: 2rem 2.5rem;
    background: linear-gradient(135deg, #1a4d2e 0%, #2d6b45 100%);
    border-radius: 1rem;
    color: white;
  }

  .key-takeaways__title {
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .key-takeaways__list {
    list-style: none;
  }

  .key-takeaways__list li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    font-size: 0.9375rem;
    line-height: 1.5;
  }

  .key-takeaways__list li:last-child {
    margin-bottom: 0;
  }

  .key-takeaways__list li svg {
    flex-shrink: 0;
    margin-top: 0.125rem;
    color: #6db88f;
  }
</style>
