---
interface Props {
  items: string[];
  class?: string;
}

const { items, class: className } = Astro.props;
---

<ul class:list={['styled-list', className]}>
  {items.map(item => (
    <li>{item}</li>
  ))}
</ul>

<style>
  .styled-list {
    margin: 1.5rem 0;
    list-style: none;
  }

  .styled-list li {
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 0.75rem;
  }

  .styled-list li::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.625rem;
    width: 0.375rem;
    height: 0.375rem;
    background: #1a4d2e;
    border-radius: 50%;
  }
</style>
