---
interface ListItem {
  text: string;
}

interface Props {
  title: string;
  text: string;
  videoThumbnail: string;
  listItems?: ListItem[];
  class?: string;
}

const {
  title,
  text,
  videoThumbnail,
  listItems = [],
  class: className
} = Astro.props;
---

<div class:list={['video-section', className]}>
  <div class="video-placeholder">
    <img src={videoThumbnail} alt="Video thumbnail" class="video-placeholder__image" />
    <div class="video-placeholder__play">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
        <polygon points="5 3 19 12 5 21 5 3"></polygon>
      </svg>
    </div>
  </div>
  <div class="video-content">
    <h3 class="video-content__title">{title}</h3>
    <p class="video-content__text">{text}</p>
    {listItems.length > 0 && (
      <ul class="video-content__list">
        {listItems.map(item => (
          <li>
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            {item.text}
          </li>
        ))}
      </ul>
    )}
    <slot />
  </div>
</div>

<style>
  .video-section {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: 4rem;
    align-items: center;
  }

  .video-placeholder {
    position: relative;
    aspect-ratio: 16/9;
    background: #1a1a1a;
    border-radius: 1rem;
    overflow: hidden;
  }

  .video-placeholder__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.7;
  }

  .video-placeholder__play {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 5rem;
    height: 5rem;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: transform 0.2s;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
  }

  .video-placeholder__play:hover {
    transform: translate(-50%, -50%) scale(1.1);
  }

  .video-placeholder__play svg {
    margin-left: 4px;
    color: #1a4d2e;
  }

  .video-content__title {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 2.25rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .video-content__text {
    font-size: 1.0625rem;
    color: #555;
    margin-bottom: 1.5rem;
    line-height: 1.7;
  }

  .video-content__list {
    list-style: none;
  }

  .video-content__list li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.75rem;
    font-size: 1rem;
    color: #333;
  }

  .video-content__list li svg {
    color: #1a4d2e;
    flex-shrink: 0;
  }

  @media (max-width: 1024px) {
    .video-section {
      grid-template-columns: 1fr;
    }
  }
</style>
