---
interface ContactInfo {
  icon: string;
  label: string;
  value: string;
  href?: string;
}

interface Props {
  title: string;
  text: string;
  contactItems?: ContactInfo[];
  class?: string;
}

const { title, text, contactItems = [], class: className } = Astro.props;
---

<div class:list={['contact', className]}>
  <div class="contact__info">
    <h3>{title}</h3>
    <p>{text}</p>
    {contactItems.map(item => (
      <div class="contact__item">
        <div class="contact__icon" set:html={item.icon} />
        <div>
          <div class="contact__label">{item.label}</div>
          {item.href ? (
            <a href={item.href} class="contact__value">{item.value}</a>
          ) : (
            <div class="contact__value">{item.value}</div>
          )}
        </div>
      </div>
    ))}
    <slot name="info" />
  </div>
  <div class="contact__form">
    <slot />
  </div>
</div>

<style>
  .contact {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;
  }

  .contact__info h3 {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .contact__info > p {
    color: #666;
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .contact__item {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .contact__icon {
    width: 3rem;
    height: 3rem;
    background: #f0f0f0;
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #1a4d2e;
  }

  .contact__icon :global(svg) {
    width: 20px;
    height: 20px;
  }

  .contact__label {
    font-size: 0.875rem;
    color: #999;
  }

  .contact__value {
    font-weight: 600;
    color: #1a1a1a;
    text-decoration: none;
  }

  a.contact__value:hover {
    color: #1a4d2e;
  }

  .contact__form {
    background: #f8f7f5;
    padding: 2.5rem;
    border-radius: 1rem;
  }

  @media (max-width: 1024px) {
    .contact {
      grid-template-columns: 1fr;
    }
  }
</style>
