---
interface Props {
  level?: 3 | 4;
  id?: string;
  class?: string;
}

const { level = 3, id, class: className } = Astro.props;
const Tag = `h${level}` as 'h3' | 'h4';
---

<Tag class:list={['subsection-heading', className]} id={id}>
  <slot />
</Tag>

<style>
  .subsection-heading {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 2rem 0 1rem;
  }
</style>
