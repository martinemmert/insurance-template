    <script>
      import gsap from 'gsap';
      import { ScrollTrigger } from 'gsap/ScrollTrigger';
      import { ScrollToPlugin } from 'gsap/ScrollToPlugin';

      gsap.registerPlugin(ScrollTrigger, ScrollToPlugin);

      const content = document.querySelector('.content');
      const sidebar = document.querySelector('.sidebar');
      const mosaic = document.getElementById('sidebar-mosaic');
      const panels = document.querySelectorAll('.sidebar-panel');
      const nav = document.getElementById('nav');
      const navLinks = document.querySelectorAll('.nav__link');
      const sections = document.querySelectorAll('.section[id^="section-"]');

      // Mosaic configuration
      const COLS = 8;
      const ROWS = 10;

      // Section background colors
      const sectionColors = {
        '1': '#1a1a2e',
        '2': '#2e1a1a',
        '3': '#1a2e1a',
        '4': '#2e2e1a',
        '5': '#1a2e2e',
        '6': '#2e1a2e',
        '7': '#1a1a1a',
      };

      let currentColor = sectionColors['1'];
      let currentSectionNumber = '1';
      let isAnimating = false;
      let targetSectionNumber = '1'; // Track what section user is actually viewing
      let isJumping = false; // Flag for programmatic scroll (skip intermediate sections)

      // Generate mosaic tiles
      const tiles = [];
      for (let row = 0; row < ROWS; row++) {
        for (let col = 0; col < COLS; col++) {
          const tile = document.createElement('div');
          tile.className = 'mosaic-tile';
          tile.dataset.row = row;
          tile.dataset.col = col;

          mosaic.appendChild(tile);
          tiles.push(tile);
        }
      }

      // Sort tiles by row for stagger effect
      const getTilesByDirection = (scrollingDown) => {
        return [...tiles].sort((a, b) => {
          const rowA = parseInt(a.dataset.row);
          const rowB = parseInt(b.dataset.row);
          // Scrolling down: bottom to top (high rows first)
          // Scrolling up: top to bottom (low rows first)
          return scrollingDown ? rowB - rowA : rowA - rowB;
        });
      };

      const triggerTransition = (newSectionNumber, scrollingDown) => {
        const newColor = sectionColors[newSectionNumber] || sectionColors['1'];

        // If same section, do nothing
        if (newSectionNumber === currentSectionNumber) return;

        // If animating, just update target - we'll sync when animation ends
        if (isAnimating) {
          return;
        }

        isAnimating = true;

        const sortedTiles = getTilesByDirection(scrollingDown);
        const tl = gsap.timeline();

        // Phase 1: Cover - tiles fade in with current color
        tl.to(sortedTiles, {
          opacity: 1,
          backgroundColor: currentColor,
          filter: () => `brightness(${1 + (Math.random() * 0.3 - 0.1)})`,
          duration: 0.12,
          ease: 'power3.out',
          stagger: {
            each: 0.006,
            from: 'start',
          },
        });

        // At peak: switch the background and panel
        tl.call(() => {
          sidebar.style.backgroundColor = newColor;
          updatePanel(newSectionNumber);
        });

        // Phase 2: Reveal - tiles fade out with new color
        tl.to(sortedTiles, {
          opacity: 0,
          backgroundColor: newColor,
          filter: () => `brightness(${1 + (Math.random() * 0.3 - 0.1)})`,
          duration: 0.12,
          ease: 'power3.in',
          stagger: {
            each: 0.006,
            from: 'start',
          },
        });

        // Cleanup
        tl.call(() => {
          currentColor = newColor;
          currentSectionNumber = newSectionNumber;
          isAnimating = false;

          // If user scrolled to a different section during animation, sync to it
          if (targetSectionNumber !== currentSectionNumber) {
            const nextScrollingDown = parseInt(targetSectionNumber) > parseInt(currentSectionNumber);
            triggerTransition(targetSectionNumber, nextScrollingDown);
          }
        });
      };

      const updatePanel = (sectionNumber) => {
        panels.forEach((panel) => {
          const panelSection = panel.getAttribute('data-section');
          panel.classList.toggle('sidebar-panel--active', panelSection === sectionNumber);
        });
      };

      const updateNavLink = (sectionNumber) => {
        navLinks.forEach((link) => {
          const linkSection = link.getAttribute('data-section');
          link.classList.toggle('nav__link--active', linkSection === sectionNumber);
        });
      };

      // Sections that should show the sidebar (1 and 5)
      const sidebarSections = ['1', '5'];

      const updateSidebar = (sectionNumber, direction) => {
        // Skip if we're doing a programmatic jump
        if (isJumping) return;

        // Always update target and nav immediately
        targetSectionNumber = sectionNumber;
        updateNavLink(sectionNumber);

        // Show/hide sidebar based on section
        const shouldShowSidebar = sidebarSections.includes(sectionNumber);
        sidebar.classList.toggle('is-hidden', !shouldShowSidebar);

        // Only trigger mosaic transition for sidebar sections
        if (shouldShowSidebar) {
          const scrollingDown = direction === 1;
          triggerTransition(sectionNumber, scrollingDown);
        }
      };

      // Setup GSAP ScrollTrigger for each section
      sections.forEach((section) => {
        const sectionNumber = section.id.replace('section-', '');

        ScrollTrigger.create({
          trigger: section,
          scroller: content,
          start: 'top center',
          end: 'bottom center',
          onEnter: () => updateSidebar(sectionNumber, 1),
          onEnterBack: () => updateSidebar(sectionNumber, -1),
        });
      });

      // Horizontal section opacity based on active state
      const horizontalSection = document.querySelector('.section-horizontal');
      if (horizontalSection) {
        ScrollTrigger.create({
          trigger: horizontalSection,
          scroller: content,
          start: 'top 80%',
          end: 'bottom 20%',
          onEnter: () => horizontalSection.classList.add('is-active'),
          onLeave: () => horizontalSection.classList.remove('is-active'),
          onEnterBack: () => horizontalSection.classList.add('is-active'),
          onLeaveBack: () => horizontalSection.classList.remove('is-active'),
        });
      }

      // Nav visibility on scroll
      content.addEventListener('scroll', () => {
        const scrollTop = content.scrollTop;
        if (scrollTop > 100) {
          nav.classList.add('nav--visible', 'nav--scrolled');
        } else {
          nav.classList.remove('nav--visible', 'nav--scrolled');
        }
      });

      // Smooth scroll with blur effect
      const scrollToSection = (target) => {
        if (!target) return;

        const currentScroll = content.scrollTop;
        const targetScroll = target.offsetTop;
        const isScrollingUp = targetScroll < currentScroll;
        const sectionNumber = target.id.replace('section-', '');
        const scrollingDown = !isScrollingUp;

        // Set jumping flag to skip intermediate sidebar updates
        isJumping = true;

        // Directly update sidebar to target section
        targetSectionNumber = sectionNumber;
        updateNavLink(sectionNumber);

        // Show/hide sidebar based on target section
        const shouldShowSidebar = sidebarSections.includes(sectionNumber);
        sidebar.classList.toggle('is-hidden', !shouldShowSidebar);

        // Only trigger mosaic transition for sidebar sections
        if (shouldShowSidebar) {
          triggerTransition(sectionNumber, scrollingDown);
        }

        // Scrolling up: instant jump (skip interactive sections)
        // Scrolling down: smooth animated scroll
        if (isScrollingUp) {
          content.classList.add('is-scrolling');
          content.scrollTo({ top: targetScroll, behavior: 'instant' });
          setTimeout(() => {
            content.classList.remove('is-scrolling');
            isJumping = false;
          }, 150);
        } else {
          content.classList.add('is-scrolling');
          gsap.to(content, {
            duration: 0.6,
            scrollTo: { y: target, autoKill: false },
            ease: 'power2.out',
            onComplete: () => {
              content.classList.remove('is-scrolling');
              isJumping = false;
            },
          });
        }
      };

      // Handle nav link clicks for smooth scroll
      navLinks.forEach((link) => {
        link.addEventListener('click', (e) => {
          e.preventDefault();
          const targetId = link.getAttribute('href');
          const target = document.querySelector(targetId);
          scrollToSection(target);
        });
      });

      // Also handle CTA button click
      document.querySelector('.nav__cta')?.addEventListener('click', (e) => {
        e.preventDefault();
        const target = document.querySelector('#section-4');
        scrollToSection(target);
      });
