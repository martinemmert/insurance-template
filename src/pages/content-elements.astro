---
import '../styles/components.css';
const base = import.meta.env.BASE_URL.endsWith('/') ? import.meta.env.BASE_URL : import.meta.env.BASE_URL + '/';
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="viewport" content="width=device-width" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;500;600;700&family=Plus+Jakarta+Sans:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <title>Content Elements - Bausteine für Inhaltsseiten</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      html { scroll-behavior: smooth; }
      body {
        font-family: 'Plus Jakarta Sans', system-ui, sans-serif;
        font-weight: 400;
        letter-spacing: -0.01em;
        color: #1a1a1a;
        line-height: 1.7;
        font-size: 1.0625rem;
      }

      /* Navigation */
      .nav {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 4rem;
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        z-index: 100;
      }
      .nav__brand {
        font-size: 1.125rem;
        font-weight: 700;
        color: #1a1a1a;
        text-decoration: none;
      }
      .nav__brand span {
        font-weight: 400;
        color: #666;
        margin-left: 0.5rem;
      }

      /* Reading Progress */
      .reading-progress {
        position: fixed;
        top: 0;
        left: 0;
        width: 0%;
        height: 3px;
        background: linear-gradient(90deg, #1a4d2e, #2d6b45);
        z-index: 101;
        transition: width 0.1s;
      }

      /* Content Layout */
      .content-layout {
        display: grid;
        grid-template-columns: 1fr min(720px, 100%) 1fr;
        padding-top: 5rem;
      }
      .content-layout > * {
        grid-column: 2;
      }
      .content-layout > .prose,
      .content-layout > .lead,
      .content-layout > p,
      .content-layout > h1,
      .content-layout > h2,
      .content-layout > h3,
      .content-layout > h4,
      .content-layout > .section-heading,
      .content-layout > .subsection-heading,
      .content-layout > .divider,
      .content-layout > .footnotes,
      .content-layout > .share-buttons,
      .content-layout > .pagination,
      .content-layout > .styled-list,
      .content-layout > .checklist,
      .content-layout > .steps-list,
      .content-layout > .definition-list,
      .content-layout > .content-timeline,
      .content-layout > .interview-item,
      .content-layout > .multi-column,
      .content-layout > .two-column-content {
        padding: 0 1.5rem;
      }
      .content-layout > .full-width {
        grid-column: 1 / -1;
        padding: 0;
      }
      .content-layout > .wide {
        grid-column: 1 / -1;
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 1.5rem;
      }

      /* Article Header */
      .article-header {
        padding: 3rem 1.5rem 2rem;
      }
      .breadcrumb {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.875rem;
        color: #666;
        margin-bottom: 1.5rem;
      }
      .breadcrumb a {
        color: #666;
        text-decoration: none;
        transition: color 0.2s;
      }
      .breadcrumb a:hover { color: #1a4d2e; }
      .breadcrumb__separator { color: #ccc; }
      .article-header__category {
        display: inline-block;
        font-size: 0.8125rem;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #1a4d2e;
        background: #e8f4ed;
        padding: 0.375rem 0.875rem;
        border-radius: 2rem;
        margin-bottom: 1rem;
      }
      .article-header__title {
        font-family: 'Playfair Display', Georgia, serif;
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 700;
        line-height: 1.2;
        margin-bottom: 1rem;
      }
      .article-header__subtitle {
        font-size: 1.25rem;
        color: #555;
        line-height: 1.5;
        margin-bottom: 1.5rem;
      }
      .article-header__meta {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        flex-wrap: wrap;
        font-size: 0.9375rem;
        color: #666;
      }
      .article-header__author {
        display: flex;
        align-items: center;
        gap: 0.75rem;
      }
      .article-header__author-image {
        width: 2.5rem;
        height: 2.5rem;
        border-radius: 50%;
        object-fit: cover;
      }
      .article-header__author-name {
        font-weight: 600;
        color: #1a1a1a;
      }
      .article-header__date,
      .article-header__reading-time {
        display: flex;
        align-items: center;
        gap: 0.375rem;
      }

      /* Hero Image */
      .hero-image {
        margin: 2rem 0;
      }
      .hero-image img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        border-radius: 1rem;
      }
      .hero-image figcaption {
        font-size: 0.875rem;
        color: #666;
        text-align: center;
        margin-top: 0.75rem;
      }

      /* Table of Contents */
      .toc {
        background: #f8f7f5;
        border-radius: 1rem;
        padding: 2rem 2.5rem;
        margin: 2rem 1.5rem;
      }
      .toc__title {
        font-size: 1rem;
        font-weight: 700;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      .toc__list {
        list-style: none;
        counter-reset: toc;
      }
      .toc__list li {
        counter-increment: toc;
        margin-bottom: 0.5rem;
      }
      .toc__list a {
        display: flex;
        align-items: baseline;
        gap: 0.75rem;
        color: #555;
        text-decoration: none;
        font-size: 0.9375rem;
        transition: color 0.2s;
      }
      .toc__list a:hover { color: #1a4d2e; }
      .toc__list a::before {
        content: counter(toc) ".";
        font-weight: 600;
        color: #1a4d2e;
        min-width: 1.5rem;
      }
      .toc__list--nested {
        margin-left: 2.25rem;
        margin-top: 0.5rem;
      }
      .toc__list--nested a::before {
        content: "–";
        color: #999;
      }

      /* Prose / Body Text */
      .prose {
        margin: 1.5rem 0;
      }
      .prose p {
        margin-bottom: 1.5rem;
      }
      .prose p:last-child {
        margin-bottom: 0;
      }

      /* Lead Paragraph */
      .lead {
        font-size: 1.25rem;
        color: #444;
        line-height: 1.7;
        margin: 2rem 0;
      }

      /* Drop Cap */
      .drop-cap::first-letter {
        float: left;
        font-family: 'Playfair Display', Georgia, serif;
        font-size: 4.5rem;
        line-height: 0.8;
        padding-right: 0.75rem;
        padding-top: 0.25rem;
        color: #1a4d2e;
        font-weight: 700;
      }

      /* Section Headings */
      .section-heading {
        font-family: 'Playfair Display', Georgia, serif;
        font-size: 1.75rem;
        font-weight: 700;
        margin: 3rem 0 1.5rem;
        padding-top: 1rem;
      }
      .section-heading--numbered {
        display: flex;
        align-items: baseline;
        gap: 0.75rem;
      }
      .section-heading__number {
        font-family: 'Plus Jakarta Sans', sans-serif;
        font-size: 1rem;
        font-weight: 700;
        color: #1a4d2e;
        background: #e8f4ed;
        padding: 0.25rem 0.625rem;
        border-radius: 0.375rem;
      }

      .subsection-heading {
        font-size: 1.25rem;
        font-weight: 700;
        margin: 2rem 0 1rem;
      }

      /* Blockquote */
      .blockquote {
        margin: 2.5rem 1.5rem;
        padding: 1.75rem 2rem;
        border-left: 4px solid #1a4d2e;
        background: #f8f7f5;
        border-radius: 0 0.75rem 0.75rem 0;
      }
      .blockquote p {
        font-size: 1.125rem;
        font-style: italic;
        color: #333;
        margin-bottom: 0.75rem;
      }
      .blockquote cite {
        font-size: 0.9375rem;
        font-style: normal;
        color: #666;
      }

      /* Pull Quote */
      .pull-quote {
        margin: 3rem 1.5rem;
        text-align: center;
        padding: 2rem;
      }
      .pull-quote p {
        font-family: 'Playfair Display', Georgia, serif;
        font-size: 1.75rem;
        font-weight: 500;
        font-style: italic;
        color: #1a4d2e;
        line-height: 1.4;
      }
      .pull-quote cite {
        display: block;
        margin-top: 1rem;
        font-size: 0.9375rem;
        font-style: normal;
        color: #666;
      }

      /* Highlight Box */
      .highlight-box {
        margin: 2rem 1.5rem;
        padding: 1.75rem 2rem;
        border-radius: 1rem;
        background: #fffbeb;
        border: 1px solid #fef3c7;
      }
      .highlight-box p {
        margin: 0;
        color: #92400e;
      }

      /* Info Boxes / Callouts */
      .callout {
        margin: 2rem 1.5rem;
        padding: 1.5rem 2rem;
        border-radius: 0.75rem;
        display: flex;
        gap: 1rem;
      }
      .callout__icon {
        flex-shrink: 0;
        width: 1.5rem;
        height: 1.5rem;
        margin-top: 0.125rem;
      }
      .callout__content {
        flex: 1;
      }
      .callout__title {
        font-weight: 700;
        margin-bottom: 0.25rem;
      }
      .callout__text {
        font-size: 0.9375rem;
        line-height: 1.6;
      }
      .callout--info {
        background: #eff6ff;
        border: 1px solid #bfdbfe;
      }
      .callout--info .callout__icon { color: #2563eb; }
      .callout--info .callout__title { color: #1e40af; }
      .callout--info .callout__text { color: #1e40af; }

      .callout--tip {
        background: #ecfdf5;
        border: 1px solid #a7f3d0;
      }
      .callout--tip .callout__icon { color: #059669; }
      .callout--tip .callout__title { color: #065f46; }
      .callout--tip .callout__text { color: #065f46; }

      .callout--warning {
        background: #fffbeb;
        border: 1px solid #fde68a;
      }
      .callout--warning .callout__icon { color: #d97706; }
      .callout--warning .callout__title { color: #92400e; }
      .callout--warning .callout__text { color: #92400e; }

      .callout--danger {
        background: #fef2f2;
        border: 1px solid #fecaca;
      }
      .callout--danger .callout__icon { color: #dc2626; }
      .callout--danger .callout__title { color: #991b1b; }
      .callout--danger .callout__text { color: #991b1b; }

      /* Key Takeaways */
      .key-takeaways {
        margin: 2.5rem 1.5rem;
        padding: 2rem 2.5rem;
        background: linear-gradient(135deg, #1a4d2e 0%, #2d6b45 100%);
        border-radius: 1rem;
        color: white;
      }
      .key-takeaways__title {
        font-size: 1.125rem;
        font-weight: 700;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      .key-takeaways__list {
        list-style: none;
      }
      .key-takeaways__list li {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        margin-bottom: 0.75rem;
        font-size: 0.9375rem;
      }
      .key-takeaways__list li:last-child {
        margin-bottom: 0;
      }
      .key-takeaways__list li svg {
        flex-shrink: 0;
        margin-top: 0.125rem;
        color: #6db88f;
      }

      /* Definition List */
      .definition-list {
        margin: 2rem 0;
      }
      .definition-item {
        padding: 1.25rem 0;
        border-bottom: 1px solid #e5e5e5;
      }
      .definition-item:first-child {
        padding-top: 0;
      }
      .definition-item:last-child {
        border-bottom: none;
        padding-bottom: 0;
      }
      .definition-term {
        font-weight: 700;
        color: #1a4d2e;
        margin-bottom: 0.375rem;
      }
      .definition-desc {
        font-size: 0.9375rem;
        color: #555;
      }

      /* Ordered Steps */
      .steps-list {
        margin: 2rem 0;
        list-style: none;
        counter-reset: steps;
      }
      .steps-list li {
        counter-increment: steps;
        display: flex;
        gap: 1.25rem;
        padding: 1.5rem 0;
        border-bottom: 1px solid #e5e5e5;
      }
      .steps-list li:last-child {
        border-bottom: none;
      }
      .steps-list li::before {
        content: counter(steps);
        flex-shrink: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 2.5rem;
        height: 2.5rem;
        background: #1a4d2e;
        color: white;
        font-weight: 700;
        border-radius: 50%;
      }
      .step-content__title {
        font-weight: 700;
        margin-bottom: 0.25rem;
      }
      .step-content__text {
        font-size: 0.9375rem;
        color: #555;
      }

      /* Checklist */
      .checklist {
        margin: 2rem 0;
        list-style: none;
      }
      .checklist li {
        display: flex;
        align-items: flex-start;
        gap: 0.75rem;
        padding: 0.75rem 0;
      }
      .checklist li svg {
        flex-shrink: 0;
        color: #1a4d2e;
        margin-top: 0.125rem;
      }

      /* Unordered List Styled */
      .styled-list {
        margin: 1.5rem 0;
        list-style: none;
      }
      .styled-list li {
        position: relative;
        padding-left: 1.5rem;
        margin-bottom: 0.75rem;
      }
      .styled-list li::before {
        content: '';
        position: absolute;
        left: 0;
        top: 0.625rem;
        width: 0.375rem;
        height: 0.375rem;
        background: #1a4d2e;
        border-radius: 50%;
      }

      /* Image with Caption */
      .content-image {
        margin: 2.5rem 1.5rem;
      }
      .content-image img {
        width: 100%;
        border-radius: 0.75rem;
      }
      .content-image figcaption {
        font-size: 0.875rem;
        color: #666;
        margin-top: 0.75rem;
        padding: 0 0.5rem;
      }

      /* Image Float */
      .image-float {
        margin: 1.5rem 0;
      }
      .image-float--left {
        float: left;
        margin-right: 2rem;
        margin-bottom: 1rem;
        max-width: 300px;
      }
      .image-float--right {
        float: right;
        margin-left: 2rem;
        margin-bottom: 1rem;
        max-width: 300px;
      }
      .image-float img {
        width: 100%;
        border-radius: 0.75rem;
      }
      .image-float figcaption {
        font-size: 0.8125rem;
        color: #666;
        margin-top: 0.5rem;
      }

      /* Image Comparison */
      .image-comparison {
        margin: 2.5rem 1.5rem;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
      }
      .image-comparison figure img {
        width: 100%;
        border-radius: 0.75rem;
      }
      .image-comparison figcaption {
        font-size: 0.875rem;
        color: #666;
        margin-top: 0.75rem;
        text-align: center;
      }

      /* Content Table */
      .content-table {
        margin: 2rem 1.5rem;
        width: calc(100% - 3rem);
        border-collapse: collapse;
        font-size: 0.9375rem;
      }
      .content-table th,
      .content-table td {
        padding: 1rem;
        text-align: left;
        border-bottom: 1px solid #e5e5e5;
      }
      .content-table th {
        font-weight: 700;
        background: #f8f7f5;
      }
      .content-table tr:last-child td {
        border-bottom: none;
      }
      .content-table tr:hover td {
        background: #fafafa;
      }

      /* Comparison Table */
      .comparison-table {
        margin: 2rem 1.5rem;
        width: calc(100% - 3rem);
        border-collapse: collapse;
        font-size: 0.9375rem;
        background: white;
        border-radius: 0.75rem;
        overflow: hidden;
        box-shadow: 0 2px 12px rgba(0,0,0,0.06);
      }
      .comparison-table th,
      .comparison-table td {
        padding: 1rem 1.25rem;
        text-align: left;
        border-bottom: 1px solid #f0f0f0;
      }
      .comparison-table th {
        font-weight: 700;
        background: #1a4d2e;
        color: white;
      }
      .comparison-table tr:last-child td {
        border-bottom: none;
      }
      .comparison-table .check { color: #059669; }
      .comparison-table .cross { color: #dc2626; }

      /* Accordion */
      .accordion {
        margin: 2rem 1.5rem;
        border: 1px solid #e5e5e5;
        border-radius: 0.75rem;
        overflow: hidden;
      }
      .accordion-item {
        border-bottom: 1px solid #e5e5e5;
      }
      .accordion-item:last-child {
        border-bottom: none;
      }
      .accordion-trigger {
        width: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1.25rem 1.5rem;
        background: white;
        border: none;
        cursor: pointer;
        font-family: inherit;
        font-size: 1rem;
        font-weight: 600;
        text-align: left;
        transition: background 0.2s;
      }
      .accordion-trigger:hover { background: #fafafa; }
      .accordion-trigger svg {
        flex-shrink: 0;
        color: #666;
        transition: transform 0.3s;
      }
      .accordion-item.open .accordion-trigger svg {
        transform: rotate(180deg);
      }
      .accordion-content {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease-out;
      }
      .accordion-item.open .accordion-content {
        max-height: 500px;
      }
      .accordion-content__inner {
        padding: 0 1.5rem 1.5rem;
        font-size: 0.9375rem;
        color: #555;
      }

      /* Q&A Format */
      .qa-item {
        margin: 2rem 1.5rem;
        padding: 1.75rem 2rem;
        background: #f8f7f5;
        border-radius: 0.75rem;
      }
      .qa-question {
        display: flex;
        gap: 1rem;
        margin-bottom: 1rem;
      }
      .qa-label {
        flex-shrink: 0;
        width: 2rem;
        height: 2rem;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 700;
        font-size: 0.875rem;
        border-radius: 0.375rem;
      }
      .qa-question .qa-label {
        background: #1a4d2e;
        color: white;
      }
      .qa-question p {
        font-weight: 600;
        margin: 0;
      }
      .qa-answer {
        display: flex;
        gap: 1rem;
      }
      .qa-answer .qa-label {
        background: #e8f4ed;
        color: #1a4d2e;
      }
      .qa-answer p {
        margin: 0;
        font-size: 0.9375rem;
        color: #555;
      }

      /* Interview Format */
      .interview-item {
        margin: 2rem 0;
        padding-left: 1.5rem;
        border-left: 3px solid #e5e5e5;
      }
      .interview-speaker {
        font-weight: 700;
        color: #1a4d2e;
        margin-bottom: 0.5rem;
      }
      .interview-text {
        color: #555;
      }
      .interview-item--highlight {
        border-left-color: #1a4d2e;
        background: #f8f7f5;
        padding: 1.5rem;
        border-radius: 0 0.75rem 0.75rem 0;
      }

      /* Summary Box */
      .summary-box {
        margin: 2.5rem 1.5rem;
        padding: 2rem 2.5rem;
        background: #f8f7f5;
        border-radius: 1rem;
        border: 1px solid #e5e5e5;
      }
      .summary-box__title {
        font-size: 1.125rem;
        font-weight: 700;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
      }
      .summary-box__content {
        font-size: 0.9375rem;
        color: #555;
      }
      .summary-box__content p {
        margin-bottom: 1rem;
      }
      .summary-box__content p:last-child {
        margin-bottom: 0;
      }

      /* Code Block */
      .code-block {
        margin: 2rem 1.5rem;
        background: #1a1a1a;
        border-radius: 0.75rem;
        overflow: hidden;
      }
      .code-block__header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0.75rem 1.25rem;
        background: #2a2a2a;
        font-size: 0.8125rem;
        color: #999;
      }
      .code-block__copy {
        background: none;
        border: none;
        color: #999;
        cursor: pointer;
        font-size: 0.8125rem;
        display: flex;
        align-items: center;
        gap: 0.375rem;
      }
      .code-block__copy:hover { color: white; }
      .code-block pre {
        padding: 1.5rem 2rem;
        overflow-x: auto;
        font-family: 'SF Mono', 'Fira Code', monospace;
        font-size: 0.875rem;
        line-height: 1.6;
        color: #e5e5e5;
      }

      /* Inline Code */
      code {
        font-family: 'SF Mono', 'Fira Code', monospace;
        font-size: 0.875em;
        background: #f0f0f0;
        padding: 0.125rem 0.375rem;
        border-radius: 0.25rem;
        color: #c7254e;
      }

      /* Download Box */
      .download-box {
        margin: 2rem 1.5rem;
        padding: 1.75rem 2rem;
        background: white;
        border: 1px solid #e5e5e5;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
        gap: 1.25rem;
      }
      .download-box__icon {
        flex-shrink: 0;
        width: 3.5rem;
        height: 3.5rem;
        background: #fef3e7;
        border-radius: 0.75rem;
        display: flex;
        align-items: center;
